<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="-267,-101,-348,-316">
        <TextBox 
            HorizontalAlignment="Left"
            Height="49"
            Margin="395,129,0,0"
            TextWrapping="Wrap"
            Text="Enter a message"
            VerticalAlignment="Top"
            Width="261"/>
        <TextBlock HorizontalAlignment="Left" Margin="447,736,0,-16" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <RadioButton x:Name="RadioButton1" Content="Hello" HorizontalAlignment="Left" Margin="333,225,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.094,0.467"/>
        <RadioButton x:Name="RadioButton2" Content="GoodBye" HorizontalAlignment="Left" Margin="637,225,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.071,0.467"/>
        <Button Content="Display" HorizontalAlignment="Left" Margin="484,331,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.24,0.6" Click="Button_Click"/>

    </Grid>
</Window>
